<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/activityMain_layoutMode_bottom_height"
        android:layout_height="@dimen/activityMain_layoutMode_bottom_height"
        android:id="@+id/imageButto"
        android:src="@drawable/circlered" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/activityMain_layoutMode_bottom_height"
        android:layout_height="@dimen/activityMain_layoutMode_bottom"
        android:id="@+id/aa"
        android:layout_alignParentBottom="false"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp:25.0"
            android:id="@+id/temp_view"
            android:textSize="@dimen/layoutmove_Fonts"
            android:textStyle="bold"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/activityMain_layoutMode_bottom_height"
        android:layout_below="@id/aa"
        android:layout_height="@dimen/activityMain_layoutMode_bottom"
        android:gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hum:70.0"
            android:id="@+id/temp_hum"
            android:textSize="@dimen/layoutmove_Fonts"
            android:textStyle="bold"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>