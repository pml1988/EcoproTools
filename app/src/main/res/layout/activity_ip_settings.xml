<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.anteya.ecoprotools.IpSettingsActivity">


    <TextView
        android:id="@+id/activityIpSettings_textViewTitle1"
        android:text="IP Address Settings"
        style="@style/MySettingsBigTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight" />

    <Button
        android:id="@+id/activityIpSettings_buttonLink"
        android:layout_width="70dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="Link"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activityIpSettings_textViewTitle1" />


    <TextView
        android:id="@+id/activityIpSettings_textView"
        android:layout_below="@+id/activityIpSettings_textViewTitle1"
        android:text="Local Address"
        style="@style/MySettingsTitle"/>

    <EditText
        android:id="@+id/activityIpSettings_editTe"
        android:layout_width="200dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:layout_below="@+id/activityIpSettings_textViewTitle1"
        android:layout_toRightOf="@id/activityIpSettings_textView"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="invisible" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:id="@+id/activityIpSettings_editText"
        android:layout_below="@+id/activityIpSettings_textViewTitle1"
        android:layout_toRightOf="@+id/activityIpSettings_textView"
        android:textSize="20dp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="Password:"
        android:id="@+id/textView3"
        android:layout_below="@+id/activityIpSettings_editText_wan"
        style="@style/MySettingsTitle"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:id="@+id/activityIpSettings_editText_passwo"
        android:layout_below="@+id/activityIpSettings_editText_wan"
        android:layout_toRightOf="@+id/textView3"
        android:inputType="number"
        android:hint="4 number"
        android:visibility="invisible" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:id="@+id/activityIpSettings_editText_password"
        android:layout_below="@+id/activityIpSettings_editText_wan"
        android:layout_toRightOf="@+id/textView3"
        android:textSize="20dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/activityIpSettings_textViewTitle2"
        android:text="IP Address List"
        style="@style/MySettingsBigTitle"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight" />


    <ImageButton
        android:id="@+id/activityIpSettings_buttonAdd"
        android:layout_width="70dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="Add IP"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:src="@android:drawable/ic_input_add"/>

    <ListView
        android:id="@+id/activityIpSettings_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activityIpSettings_textViewTitle2"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:id="@+id/activityIpSettings_textView_wan"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/activityIpSettings_textView"
        android:layout_toRightOf="@+id/activityIpSettings_editText_wan" />

    <TextView
        style="@style/MySettingsTitle"
        android:id="@+id/activityIpSettings_editText_wan"
        android:text="WAN Address"
        android:layout_below="@+id/activityIpSettings_textView" />

    <Button
        android:id="@+id/activityIpSettings_buttonLink_wan"
        android:layout_width="70dp"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="Link"
        android:layout_alignTop="@+id/activityIpSettings_textView_wan"
        android:layout_alignRight="@+id/activityIpSettings_buttonLink"
        android:layout_alignEnd="@+id/activityIpSettings_buttonLink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="PORT:"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/activityIpSettings_editTe"
        android:layout_toRightOf="@+id/activityIpSettings_editTe"
        android:layout_toEndOf="@+id/activityIpSettings_editTe"
        style="@style/MySettingsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="80"
        android:id="@+id/textView8"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView7"
        style="@style/MySettingsTitle"
        android:layout_below="@+id/activityIpSettings_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="PORT:"
        android:id="@+id/textView9"
        android:layout_below="@+id/activityIpSettings_textView"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/activityIpSettings_textView_wan"
        style="@style/MySettingsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activitySettings_textViewTitle_layoutHeight"
        android:text="8023"
        android:id="@+id/textView10"
        android:layout_below="@+id/activityIpSettings_textViewTitle1"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        style="@style/MySettingsTitle" />

</RelativeLayout>
