<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anteya.ecoprotools">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".object.DataControl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
        <activity
            android:name=".IpSettingsActivity"
            android:label="@string/title_activity_ip_settings"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
        <activity
            android:name=".WifiSettingsActivity"
            android:label="@string/title_activity_wifi_settings"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
        <activity
            android:name=".LanScanActivity"
            android:label="@string/title_activity_lan_scan"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
        <activity
            android:name=".IpCameraActivity"
            android:label="@string/title_activity_ip_camera"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
        <activity
            android:name=".IpCameraSettingsActivity"
            android:label="@string/title_activity_ip_camera_settings"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
        <activity
            android:name=".IpCameraUidSettingsActivity"
            android:label="@string/title_activity_ip_camera_uid_settings"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
        <activity
            android:name=".IpCameraWifiSettingsActivity"
            android:label="@string/title_activity_ip_camera_wifi_settings"
            android:screenOrientation="landscape"
            android:theme="@style/MySettingsTheme" />
    </application>

</manifest>
